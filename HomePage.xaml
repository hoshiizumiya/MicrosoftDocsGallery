<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MicrosoftDocsGallery.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MicrosoftDocsGallery"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources />

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--  方形卡片滑动区  -->
        <ScrollViewer
            x:Name="scrollView"
            Grid.Row="0"
            Height="160"
            Margin="0,16,0,0"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Disabled">
            <ItemsControl
                x:Name="CardCarousel"
                HorizontalContentAlignment="Center"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <!--  所有的子项会横向排列  -->
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <!--  用 ItemTemplate 可以让你只写一次“样式模板”，数据多少都能自动套用。BUG :image 和 textblock 绑定了同样的内容  -->
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <Border
                            Width="180"
                            Height="120"
                            Margin="8,20,0,0"
                            Background="#FFEDF2FB"
                            CornerRadius="12">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!--  修复：TextBlock 没有 Background 属性，若要显示图片背景，请将 Image 放在 Border 内部  -->
                                <Image
                                    Width="180"
                                    Height="120"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    IsHitTestVisible="False"
                                    Opacity="0.3"
                                    Source="{x:Bind}"
                                    Stretch="UniformToFill" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    FontWeight="SemiBold"
                                    Text="{x:Bind}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <!--  最近浏览等  -->
        <StackPanel
            x:Name="RecentPanel"
            Grid.Row="2"
            Margin="0,0,0,48"
            Orientation="Vertical"
            Spacing="16">
            <TextBlock
                HorizontalAlignment="Center"
                FontWeight="SemiBold"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="Recent samples" />
            <ItemsRepeater x:Name="animatedScrollRepeater">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <Button
                            HorizontalAlignment="Stretch"
                            Background="{x:Bind}"
                            Click="Animated_GotItem"
                            Content="{x:Bind}"
                            Foreground="{ThemeResource ButtonForeground}"
                            GotFocus="Animated_GotItem" />
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </StackPanel>
    </Grid>
</Page>
