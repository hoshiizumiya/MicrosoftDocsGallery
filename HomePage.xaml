<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="MicrosoftDocsGallery.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MicrosoftDocsGallery"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="HeroCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="8" />
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,24,0,12" />
        </Style>
    </Page.Resources>

    <ScrollViewer Padding="40" VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="1200" Spacing="32">

            <!--  欢迎区域  -->
            <StackPanel Spacing="12">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="32"
                    FontWeight="Bold"
                    Text="欢迎使用 Microsoft Docs Gallery" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="探索最新的Microsoft技术文档和学习资源" />
            </StackPanel>

            <!--  快速访问卡片  -->
            <StackPanel>
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="快速访问" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  WinUI 3 卡片  -->
                    <Border Grid.Column="0" Style="{StaticResource HeroCardStyle}">
                        <StackPanel Spacing="12">
                            <FontIcon
                                FontSize="32"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Glyph="&#xE8A5;" />
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="WinUI 3" />
                            <TextBlock
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="构建现代Windows应用程序的最新UI框架"
                                TextWrapping="Wrap" />
                            <Button
                                HorizontalAlignment="Stretch"
                                Click="OpenWinUIDocs_Click"
                                Content="开始学习"
                                Style="{StaticResource AccentButtonStyle}" />
                        </StackPanel>
                    </Border>

                    <!--  .NET 卡片  -->
                    <Border Grid.Column="1" Style="{StaticResource HeroCardStyle}">
                        <StackPanel Spacing="12">
                            <FontIcon
                                FontSize="32"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Glyph="&#xE756;" />
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text=".NET 平台" />
                            <TextBlock
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="跨平台的现代开发平台，支持多种编程语言"
                                TextWrapping="Wrap" />
                            <Button
                                HorizontalAlignment="Stretch"
                                Click="QuickAccess_Click"
                                Content="探索 .NET"
                                Tag="https://learn.microsoft.com/dotnet/" />
                        </StackPanel>
                    </Border>

                    <!--  Azure 卡片  -->
                    <Border Grid.Column="2" Style="{StaticResource HeroCardStyle}">
                        <StackPanel Spacing="12">
                            <FontIcon
                                FontSize="32"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Glyph="&#xE753;" />
                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="Azure 云服务" />
                            <TextBlock
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Microsoft的云计算平台，提供全面的云服务"
                                TextWrapping="Wrap" />
                            <Button
                                HorizontalAlignment="Stretch"
                                Click="QuickAccess_Click"
                                Content="了解 Azure"
                                Tag="https://learn.microsoft.com/azure/" />
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>

            <!--  特色内容轮播  -->
            <StackPanel>
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="特色内容" />
                <ScrollViewer
                    x:Name="scrollView"
                    Height="200"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Disabled"
                    ZoomMode="Disabled">
                    <ItemsControl
                        x:Name="CardCarousel"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="16" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <Border
                                    Width="300"
                                    Height="160"
                                    Padding="16"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <StackPanel VerticalAlignment="Center" Spacing="8">
                                        <FontIcon
                                            FontSize="24"
                                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                            Glyph="&#xE8F1;" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Text="{x:Bind}"
                                            TextAlignment="Center"
                                            TextWrapping="Wrap" />
                                        <Button
                                            HorizontalAlignment="Center"
                                            Content="查看详情"
                                            Style="{StaticResource AccentButtonStyle}" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>

            <!--  最近浏览  -->
            <StackPanel x:Name="RecentPanel" Spacing="16">
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="最近浏览" />
                <ListView
                    x:Name="RecentItemsList"
                    MaxHeight="300"
                    SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <Border HorizontalAlignment="Stretch" Style="{StaticResource HeroCardStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <FontIcon
                                        Grid.Column="0"
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        Glyph="&#xE7BE;" />

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock FontWeight="SemiBold" Text="{x:Bind}" />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="上次访问时间：今天" />
                                    </StackPanel>

                                    <Button
                                        Grid.Column="2"
                                        Click="Animated_GotItem"
                                        Content="&#xE8A7;"
                                        FontFamily="Segoe MDL2 Assets"
                                        Style="{StaticResource SubtleButtonStyle}"
                                        ToolTipService.ToolTip="打开" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <!--  统计信息  -->
            <StackPanel>
                <TextBlock Style="{StaticResource SectionHeaderStyle}" Text="使用统计" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource HeroCardStyle}">
                        <StackPanel HorizontalAlignment="Center" Spacing="8">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Text="125" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="页面浏览" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource HeroCardStyle}">
                        <StackPanel HorizontalAlignment="Center" Spacing="8">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Text="23" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="收藏文档" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource HeroCardStyle}">
                        <StackPanel HorizontalAlignment="Center" Spacing="8">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Text="7" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="天连续使用" />
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" Style="{StaticResource HeroCardStyle}">
                        <StackPanel HorizontalAlignment="Center" Spacing="8">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Text="45" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="分钟学习时间" />
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
